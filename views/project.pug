extends layout.pug
block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= `${projName}`
        p.lead.text-light= `${projDescr}`
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each tech in projTech
            li= tech
        a.button.expanded(href=`${projLiveLink}`) Live Demo
        a.button.expanded(href=`${projGithub}`) GitHub Repo
    each image in projImages
      img.project-images.image(src=image)