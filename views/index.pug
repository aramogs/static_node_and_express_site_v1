extends layout.pug
block content 
  article.grid-container.portfolio-intro
    div
      h1 My portfolio 
      p.lead.text-light
        | Projects created on treehouse so far
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each proj in projs
        .cell
          a(href=`/project/${proj.proj_id}`)
            img.project-images.thumbnail(src=`../images/project${proj.proj_id+1}_0.jpg`)
            h5= proj.proj_name

      
